@page
@model ClassManager.Pages.AddStudentModel
@{
}

<form class="row g-3 needs-validation" method="post" novalidate>
    <div class="col-md-4">
        <label class="form-label">First Name</label>
        <input asp-for="Students.Firstname" type="text" class="form-control" required>
        <div class="invalid-feedback">
            Please Write Your FirstName .
        </div>
    </div>
    <div class="col-md-4">
        <label class="form-label">Last Name</label>
        <input asp-for="Students.Lastname" type="text" class="form-control" required>
        <div class="invalid-feedback">
            Please Write Your LastName .
        </div>
    </div>
    <div class="col-md-4">
        <label class="form-label">Father Name</label>
        <div class="input-group has-validation">
            <input asp-for="Students.Fathername" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Please Write Your FatherName .
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <label class="form-label">Age</label>
        <input asp-for="Students.Age" type="text" class="form-control" required>
        <div class="invalid-feedback">
                Please Write Your Age .
        </div>
    </div>
    <div class="col-md-4">
        <label class="form-label">Grade</label>
        <input asp-for="Students.Grade" type="text" class="form-control" required>
        <div class="invalid-feedback">
            Please Write Your Grade .
        </div>
    </div>
    <div class="col-md-4 border-success">
        <label class="form-label">Code</label>
        <input asp-for="Students.Code" type="text" class="form-control" required>
        <div class="invalid-feedback">
            Please Write Your Code .
        </div>
    </div>
    <br/>
    <div class="col-md-12">
        <button type="submit" class="button"> 
            <span>
                Add Student&nbsp; <i class="fa-solid fa-plus fa-beat" style="color: white;"></i>
            </span>
        </button>
    </div>
</form>

        <style>

        .button {
            --bg: #fff;
            --hover-bg: #000;
            --hover-text: #fff;
            color: #000;
            border: 1px solid var(--bg);
            border-radius: 10px;
            padding: 0.7em 2em;
            background: var(--bg);
            transition: 0.2s;
        }

        .button:hover {
            color: var(--hover-text);
            transform: translate(-0.25rem,-0.25rem);
            background: var(--hover-bg);
            box-shadow: 0.25rem 0.25rem var(--bg);
        }

        .button:active {
            transform: translate(0);
            box-shadow: none;
        }

        </style>