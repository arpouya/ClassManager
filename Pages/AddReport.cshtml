@page
@model ClassManager.Pages.AddReportModel
@{
}

<form method="post">
    <div class="col-md-4">
    <label class="form-label">Select Class</label>
    <select class="form-select" asp-for="ClsId" required>
            @{
                foreach (var cls in Model.Classes)
                {
                        <option value="@cls.Id">
                        @cls.Classname
                        </option>
                }
            }
    </select>
    <div class="invalid-feedback">
      Please Select A Class .
    </div>
</div>

    <div class="col-md-4">
        <label class="form-label">Code</label>
             <input asp-for="Report.Point" type="text" class="form-control" required>
    <div class="invalid-feedback">
            Please Write A Score .
        </div>
    </div>

<br/>

 <div class="col-md-12">
        <button type="submit" class="button"> 
            <span>
                Add Student&nbsp; <i class="fa-solid fa-plus fa-beat" style="color: white"></i>
            </span>
        </button>
    </div>
</form>

        <style>

        .button {
            --bg: #fff;
            --hover-bg: #000;
            --hover-text: #fff;
            color: #000;
            border: 1px solid var(--bg);
            border-radius: 10px;
            padding: 0.7em 2em;
            background: var(--bg);
            transition: 0.2s;
        }

        .button:hover {
            color: var(--hover-text);
            transform: translate(-0.25rem,-0.25rem);
            background: var(--hover-bg);
            box-shadow: 0.25rem 0.25rem var(--bg);
        }

        .button:active {
            transform: translate(0);
            box-shadow: none;
        }

        </style>